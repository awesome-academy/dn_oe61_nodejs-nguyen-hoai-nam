include ../layouts/admin-layout

+adminLayout('Supervisors Management', 'supervisors', 'Manage all supervisors in the system', 'Supervisors Management')
  div(class="max-w-7xl mx-auto")
    //- Page Header
    div(class="bg-white rounded-lg shadow-lg p-6 mb-6")
      div(class="flex items-center justify-between")
        div
          h2(class="text-2xl font-bold text-gray-900 mb-2") Supervisors Management
          p(class="text-gray-600") Manage all supervisors in the system
        button(id="add-supervisor-btn" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 flex items-center")
          i(class="fas fa-plus mr-2")
          span Add Supervisor

    //- Stats Cards
    div(class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6")
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-blue-100 text-blue-600")
            i(class="fas fa-user-tie text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Total Supervisors
            p(class="text-2xl font-bold text-gray-900" id="total-supervisors") 0
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-green-100 text-green-600")
            i(class="fas fa-check-circle text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Active Supervisors
            p(class="text-2xl font-bold text-gray-900" id="active-supervisors") 0
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-yellow-100 text-yellow-600")
            i(class="fas fa-clock text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Pending Verification
            p(class="text-2xl font-bold text-gray-900" id="pending-supervisors") 0

    //- Supervisors Table
    div(class="bg-white rounded-lg shadow-lg overflow-hidden")
      div(class="px-6 py-4 border-b border-gray-200")
        div(class="flex items-center justify-between")
          h3(class="text-lg font-semibold text-gray-900") All Supervisors
          div(class="flex items-center space-x-2")
            input(type="text" id="search-supervisor" placeholder="Search supervisors..." class="px-3 py-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500")
            button(id="search-btn" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200")
              i(class="fas fa-search")

      div(class="overflow-x-auto")
        table(class="min-w-full divide-y divide-gray-200")
          thead(class="bg-gray-50")
            tr
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Supervisor
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Email
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Status
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Created Date
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Actions
          tbody(id="supervisors-tbody" class="bg-white divide-y divide-gray-200")
            //- Supervisors will be loaded here dynamically

    //- Loading State
    div(id="loading-state" class="hidden text-center py-8")
      i(class="fas fa-spinner fa-spin text-2xl text-gray-400")
      p(class="mt-2 text-gray-500") Loading supervisors...

    //- Empty State
    div(id="empty-state" class="hidden text-center py-8")
      i(class="fas fa-user-tie text-4xl text-gray-300")
      p(class="mt-2 text-gray-500") No supervisors found

  //- Include Supervisor Modal
  include _supervisor-modal.pug

  block scripts
    script(src="/js/supervisors.js")
