include ../layouts/admin-layout

+adminLayout('Tasks Management', 'tasks', 'Manage all tasks in the system', 'Tasks Management')
  div(class="max-w-7xl mx-auto")
    //- Page Header
    div(class="bg-white rounded-lg shadow-lg p-6 mb-6")
      div(class="flex items-center justify-between")
        div
          h2(class="text-2xl font-bold text-gray-900 mb-2") Tasks Management
          p(class="text-gray-600") Manage all tasks in the system
        button(id="add-task-btn" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 flex items-center")
          i(class="fas fa-plus mr-2")
          span Add Task

    //- Stats Cards (You might want to adjust these for tasks)
    div(class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6")
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-blue-100 text-blue-600")
            i(class="fas fa-tasks text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Total Tasks
            p(class="text-2xl font-bold text-gray-900" id="total-tasks") 0
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-green-100 text-green-600")
            i(class="fas fa-check-circle text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Completed Tasks
            p(class="text-2xl font-bold text-gray-900" id="completed-tasks") 0
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-yellow-100 text-yellow-600")
            i(class="fas fa-clock text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Pending Tasks
            p(class="text-2xl font-bold text-gray-900" id="pending-tasks") 0

    //- Tasks Table
    div(class="bg-white rounded-lg shadow overflow-hidden")
      div(class="p-4")
        h2(class="text-xl font-semibold text-gray-700") All Tasks
      div(class="overflow-x-auto")
        table(class="min-w-full divide-y divide-gray-200")
          thead(class="bg-gray-50")
            tr
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Task Name
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") File URL
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Created At
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Actions
          tbody(id="tasks-table-body" class="bg-white divide-y divide-gray-200")
            //- Table rows will be inserted here by JS

      //- Pagination
      div(id="pagination-container" class="p-4 flex justify-center items-center")
        //- Pagination will be rendered by JS

  //- Modal for Add/Edit Task (Initially hidden)
  div(id="task-modal" class="fixed inset-0 bg-gray-800 bg-opacity-60 overflow-y-auto h-full w-full hidden z-50")
    div(class="relative top-10 mx-auto p-6 border w-full max-w-2xl shadow-lg rounded-xl bg-white")
      //- Modal Header
      div(class="flex justify-between items-center pb-3 border-b border-gray-200")
        p(id="modal-title" class="text-2xl font-bold text-gray-800") Add New Task
        button(id="modal-close-btn" class="text-gray-400 hover:text-gray-600")
          i(class="fas fa-times text-xl")

      //- Modal Body
      div(class="mt-5")
        form(id="task-form")
          input(type="hidden" id="task-id")
          div(class="grid grid-cols-1 gap-6")
            //- Task Name
            div
              label(for="task-name" class="block text-sm font-medium text-gray-700 mb-1") Task Name
              input(type="text" id="task-name" name="name" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")

            //- File URL
            div
              label(for="task-file-url" class="block text-sm font-medium text-gray-700") File URL
              input(type="text" id="task-file-url" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")

            div
              label(for="task-subject" class="block text-sm font-medium text-gray-700") Subject
              select(id="task-subject" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
                option(value="") Select a subject

          div(class="flex justify-end space-x-3 pt-4")
            button(type="button" id="cancel-btn" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400") Cancel
            button(type="submit" id="save-btn" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700") Save

block scripts
  script(src="/js/tasks.js")
