include ../layouts/admin-layout

+adminLayout('User Profile', 'profile', 'Manage your personal information', 'My Profile')
  //- Custom styles for this page
  style.
    .profile-avatar-container {
      position: relative;
      width: 128px;
      height: 128px;
    }
    .profile-avatar-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      text-align: center;
      padding: 4px 0;
      border-bottom-left-radius: 9999px;
      border-bottom-right-radius: 9999px;
      opacity: 0;
      transition: opacity 0.3s ease;
      cursor: pointer;
    }
    .profile-avatar-container:hover .profile-avatar-overlay {
      opacity: 1;
    }
    #avatarUpload {
      display: none;
    }

  //- Main content
  div(class="grid grid-cols-1 lg:grid-cols-3 gap-8")
    //- Profile Card (Left)
    div(class="lg:col-span-1")
      .bg-white.rounded-2xl.shadow-xl.p-8
        .flex.flex-col.items-center
          .profile-avatar-container.mb-4
            img#user-avatar.w-32.h-32.rounded-full.object-cover.shadow-lg(src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face" alt="User Avatar")
            .profile-avatar-overlay(onclick="document.getElementById('avatarUpload').click()")
              i.fas.fa-camera.mr-1
              span(data-i18n="profile.changeAvatar") Change
            input#avatarUpload(type="file" accept="image/*")
          h2#user-name.text-2xl.font-bold.text-gray-900.mt-4(data-i18n="profile.userName") - 
          p#user-email.text-gray-500.text-sm(data-i18n="profile.email") - 
          .mt-4.flex.items-center.space-x-2
            span#user-role.px-3.py-1.text-xs.font-semibold.text-white.rounded-full(data-i18n="profile.role") - 
            span#user-status.px-3.py-1.text-xs.font-semibold.text-white.rounded-full(data-i18n="profile.status") - 

    //- Edit Profile Form (Right)
    div(class="lg:col-span-2")
      .bg-white.rounded-2xl.shadow-xl.p-8
        h3.text-xl.font-bold.text-gray-800.mb-6(data-i18n="profile.updateProfile") Update Profile
        form#edit-profile-form
          div(class="grid grid-cols-1 md:grid-cols-2 gap-6")
            .form-group
              label.block.text-sm.font-medium.text-gray-700.mb-2(for="userName" data-i18n="profile.form.userName") User Name
              input#userName.form-input(type="text" name="userName" placeholder="{{__ 'profile.form.userNamePlaceholder'}}" data-i18n-placeholder="profile.form.userNamePlaceholder")
            
            .form-group
              label.block.text-sm.font-medium.text-gray-700.mb-2(for="email" data-i18n="profile.form.email") Email Address
              input#email.form-input(type="email" name="email" placeholder="{{__ 'profile.form.emailPlaceholder'}}" data-i18n-placeholder="profile.form.emailPlaceholder" disabled)

          .mt-8.flex.justify-end.space-x-4
            button.btn.btn-secondary(type="button" data-i18n="common.cancel") Cancel
            button.btn.btn-primary(type="submit" data-i18n="profile.saveChanges") Save Changes

block scripts
  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
  script(src="/js/profile.js")
