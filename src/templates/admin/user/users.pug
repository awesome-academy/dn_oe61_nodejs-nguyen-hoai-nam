include ../layouts/admin-layout

+adminLayout('Users Management', 'users', 'Manage system users', 'Users Management')
  div(class="max-w-7xl mx-auto")
    //- Page Header
    div(class="bg-white rounded-lg shadow-lg p-6 mb-6")
      div(class="flex items-center justify-between")
        div
          h2(class="text-2xl font-bold text-gray-900 mb-2" data-i18n="users.pageTitle") Users Management
          p(class="text-gray-600" data-i18n="users.pageDesc") Manage all users in the system

    //- Users Table
    div(class="bg-white rounded-lg shadow-lg overflow-hidden")
      div(class="px-6 py-4 border-b border-gray-200")
        div(class="flex items-center justify-between")
          h3(class="text-lg font-semibold text-gray-900" data-i18n="users.allUsers") All Users
          div(class="relative")
            span(class="absolute inset-y-0 left-0 pl-3 flex items-center")
              i(class="fas fa-search text-gray-400")
            input(id="search-input" type="text" placeholder="{{__ 'users.searchPlaceholder'}}" data-i18n-placeholder="users.searchPlaceholder" class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500")

      div(class="overflow-x-auto")
        table(class="min-w-full divide-y divide-gray-200")
          thead(class="bg-gray-50")
            tr
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="users.table.user") User
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="users.table.role") Role
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="users.table.status") Status
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="users.table.createdAt") Created At
              th(scope="col" class="relative px-6 py-3")
                span(class="sr-only" data-i18n="users.table.actions") Actions
          tbody(id="users-table-body" class="bg-white divide-y divide-gray-200")
            //- User rows will be injected here by users.js

block scripts
  script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
  script(src="/js/users.js")
