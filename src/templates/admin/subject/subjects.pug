include ../layouts/admin-layout

+adminLayout('Subjects Management', 'subjects', 'Manage all subjects in the system', 'Subjects Management')
  div(class="max-w-7xl mx-auto")
    //- Page Header
    div(class="bg-white rounded-lg shadow-lg p-6 mb-6")
      div(class="flex items-center justify-between")
        div
          h2(class="text-2xl font-bold text-gray-900 mb-2") Subjects Management
          p(class="text-gray-600") Manage all subjects in the system
        div(class="flex items-center space-x-2")
          button(id="add-subject-btn" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 flex items-center")
            i(class="fas fa-plus mr-2")
            span Add Subject
          //- Hidden file input for import
          input(type="file" id="import-subjects-file" accept=".xlsx,.xls" class="hidden")
          button(id="import-subjects-btn" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 flex items-center")
            i(class="fas fa-file-import mr-2")
            span Import Subjects

    //- Stats Cards
    div(class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6")
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-blue-100 text-blue-600")
            i(class="fas fa-book text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Total Subjects
            p(class="text-2xl font-bold text-gray-900" id="total-subjects") 0

    //- Subjects Table
    div(class="bg-white rounded-lg shadow-lg overflow-hidden")
      div(class="px-6 py-4 border-b border-gray-200")
        div(class="flex items-center justify-between")
          h3(class="text-lg font-semibold text-gray-900") All Subjects
          div(class="flex items-center space-x-2")
            input(type="text" id="search-subject" placeholder="Search subjects..." class="px-3 py-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500")
            button(id="search-btn" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200")
              i(class="fas fa-search")

      div(class="overflow-x-auto")
        table(class="min-w-full divide-y divide-gray-200")
          thead(class="bg-gray-50")
            tr
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") ID
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Name
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Description
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Study Duration (hours)
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Actions
          tbody(id="subjects-tbody" class="bg-white divide-y divide-gray-200")
            //- Subject data will be loaded here dynamically

      //- Pagination
      .flex.items-center.justify-center.border-t.border-gray-200.bg-white.px-4.py-3
        div#pagination-container

  //- Add/Edit Subject Modal
  div(id="subject-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50")
    div(class="relative top-20 mx-auto p-5 border w-1/2 shadow-lg rounded-md bg-white")
      div(class="mt-3")
        h3(id="modal-title" class="text-lg font-medium text-gray-900 mb-4") Add New Subject
        form(id="subject-form" class="space-y-4")
          div
            label(for="subject-name" class="block text-sm font-medium text-gray-700") Name
            input(type="text" id="subject-name" required class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          div
            label(for="subject-description" class="block text-sm font-medium text-gray-700") Description
            textarea(id="subject-description" rows="3" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          div
            label(for="subject-duration" class="block text-sm font-medium text-gray-700") Study Duration (hours)
            input(type="number" id="subject-duration" required class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")

          //- Dynamic Tasks Section
          div(class="border-t border-gray-200 pt-4 mt-4")
            div(class="flex justify-between items-center mb-2")
              h4(class="text-md font-medium text-gray-800") Tasks
              button(type="button" id="add-task-btn" class="px-3 py-1 bg-green-500 text-white rounded-md text-sm hover:bg-green-600")
                i(class="fas fa-plus mr-1")
                | Add Task
            div(id="tasks-container" class="space-y-3")
              //- Task input groups will be injected here by JavaScript
          div(class="flex justify-end space-x-3 pt-4")
            button(type="button" id="cancel-btn" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400") Cancel
            button(type="submit" id="save-btn" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700") Save

block scripts
  script(src="/js/subjects.js")
