mixin sidebar(currentPage, userName, userAvatar)
  div(class="sidebar w-80 h-screen flex flex-col z-40")
    div(class="p-6 border-b border-gray-200")
      div(class="flex items-center space-x-3")
        img(src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/f909c6d0-b6a0-4215-a6ad-4d511e9b4418.png" alt="Logo" class="w-12 h-12 rounded-xl shadow-lg")
        div
          h1(class="text-xl font-bold text-gray-800") Training System
          p(class="text-sm text-gray-500") Admin Dashboard

    div(class="flex-1 overflow-y-auto scrollbar-custom")
      nav(class="p-4")
        div(class="space-y-2")
          a(href="/admin/dashboard" class=`${currentPage === 'dashboard' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'dashboard' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-tachometer-alt mr-3 ${currentPage === 'dashboard' ? '' : 'text-gray-500'}`)
            span Dashboard
          
          a(href="/admin/chat" class=`${currentPage === 'chat' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'chat' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-comment-dots mr-3 ${currentPage === 'chat' ? '' : 'text-gray-500'}`)
            span Chat
          
          a(href="/admin/courses" class=`${currentPage === 'courses' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'courses' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-graduation-cap mr-3 ${currentPage === 'courses' ? '' : 'text-gray-500'}`)
            span Courses
          
          a(href="/admin/subjects" class=`${currentPage === 'subjects' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'subjects' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-book mr-3 ${currentPage === 'subjects' ? '' : 'text-gray-500'}`)
            span Subjects
          
          a(href="/admin/users" class=`${currentPage === 'users' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'users' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-users mr-3 ${currentPage === 'users' ? '' : 'text-gray-500'}`)
            span All Users
          
          a(href="/admin/trainees" class=`${currentPage === 'trainees' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'trainees' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-user-graduate mr-3 ${currentPage === 'trainees' ? '' : 'text-gray-500'}`)
            span Trainees
          
          a(href="/admin/supervisors" class=`${currentPage === 'supervisors' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'supervisors' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-user-tie mr-3 ${currentPage === 'supervisors' ? '' : 'text-gray-500'}`)
            span Supervisors
          
          a(href="/admin/tasks" class=`${currentPage === 'tasks' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'tasks' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-tasks mr-3 ${currentPage === 'tasks' ? '' : 'text-gray-500'}`)
            span Tasks
          
          a(href="/admin/reports" class=`${currentPage === 'reports' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'reports' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-chart-bar mr-3 ${currentPage === 'reports' ? '' : 'text-gray-500'}`)
            span Reports
          
          a(href="/admin/settings" class=`${currentPage === 'settings' ? 'active-menu' : 'menu-item'} flex items-center px-4 py-3 text-sm font-medium ${currentPage === 'settings' ? '' : 'text-gray-700'}`)
            i(class=`fas fa-cog mr-3 ${currentPage === 'settings' ? '' : 'text-gray-500'}`)
            span Settings

    div(class="p-6 border-t border-gray-200")
      div(class="flex items-center justify-between")
        a(href="/admin/profile" class="flex items-center space-x-3 group flex-1")
          div(class="relative")
            img(id="user-avatar" src=userAvatar || "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face" alt="Admin user" class="user-avatar w-12 h-12 rounded-full")
            div(class="online-indicator")
          div(class="flex-1")
            p(class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors" id="user-name")= userName || 'Admin User'
            p(class="text-xs text-green-600") Online
        button(class="p-2 text-gray-500 hover:text-gray-700 rounded-full hover:bg-gray-100 flex-shrink-0" onclick="logout()")
          i(class="fas fa-sign-out-alt") 
