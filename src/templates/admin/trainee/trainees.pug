include ../layouts/admin-layout

+adminLayout('Trainees Management', 'trainees', 'Manage all trainees in the system', 'Trainees Management')
  div(class="max-w-7xl mx-auto")
    //- Page Header
    div(class="bg-white rounded-lg shadow-lg p-6 mb-6")
      div(class="flex items-center justify-between")
        div
          h2(class="text-2xl font-bold text-gray-900 mb-2") Trainees Management
          p(class="text-gray-600") Manage all trainees in the system
        button(id="add-trainee-btn" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 flex items-center")
          i(class="fas fa-plus mr-2")
          span Add Trainee

    //- Stats Cards
    div(class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6")
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-blue-100 text-blue-600")
            i(class="fas fa-users text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Total Trainees
            p(class="text-2xl font-bold text-gray-900" id="total-trainees") 0
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-green-100 text-green-600")
            i(class="fas fa-check-circle text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Active Trainees
            p(class="text-2xl font-bold text-gray-900" id="active-trainees") 0
      div(class="bg-white rounded-lg shadow-lg p-6")
        div(class="flex items-center")
          div(class="p-3 rounded-full bg-yellow-100 text-yellow-600")
            i(class="fas fa-clock text-xl")
          div(class="ml-4")
            p(class="text-sm font-medium text-gray-600") Inactive Trainees
            p(class="text-2xl font-bold text-gray-900" id="inactive-trainees") 0

    //- Trainees Table
    div(class="bg-white rounded-lg shadow-lg overflow-hidden")
      div(class="px-6 py-4 border-b border-gray-200")
        div(class="flex items-center justify-between")
          h3(class="text-lg font-semibold text-gray-900") All Trainees
          div(class="flex items-center space-x-2")
            input(type="text" id="search-trainee" placeholder="Search trainees..." class="px-3 py-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500")
            button(id="search-btn" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200")
              i(class="fas fa-search")

      div(class="overflow-x-auto")
        table(class="min-w-full divide-y divide-gray-200")
          thead(class="bg-gray-50")
            tr
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Trainee
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Email
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Status
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Created Date
              th(class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider") Actions
          tbody(id="trainees-tbody" class="bg-white divide-y divide-gray-200")
            //- Trainees will be loaded here dynamically

    //- Loading State
    div(id="loading-state" class="hidden text-center py-8")
      i(class="fas fa-spinner fa-spin text-2xl text-gray-400")
      p(class="mt-2 text-gray-500") Loading trainees...

    //- Empty State
    div(id="empty-state" class="hidden text-center py-8")
      i(class="fas fa-users text-4xl text-gray-300")
      p(class="mt-2 text-gray-500") No trainees found

  //- Add/Edit Trainee Modal
  div(id="trainee-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50")
    div(class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white")
      div(class="mt-3")
        h3(id="modal-title" class="text-lg font-medium text-gray-900 mb-4") Add New Trainee
        form(id="trainee-form" class="space-y-4")
          div
            label(for="trainee-name" class="block text-sm font-medium text-gray-700") Name
            input(type="text" id="trainee-name" required class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          div
            label(for="trainee-email" class="block text-sm font-medium text-gray-700") Email
            input(type="email" id="trainee-email" required class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          div(id="password-group")
            label(for="trainee-password" class="block text-sm font-medium text-gray-700") Password
            input(type="password" id="trainee-password" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          div(id="confirm-password-group")
            label(for="trainee-confirm-password" class="block text-sm font-medium text-gray-700") Confirm Password
            input(type="password" id="trainee-confirm-password" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
          div
            label(for="trainee-status" class="block text-sm font-medium text-gray-700") Status
            select(id="trainee-status" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500")
              option(value="ACTIVE") Active
              option(value="INACTIVE") Inactive
          div(class="flex justify-end space-x-3 pt-4")
            button(type="button" id="cancel-btn" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400") Cancel
            button(type="submit" id="save-btn" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700") Save

  block scripts
    script(src="/js/trainees.js") 
