include ../layouts/admin-layout

+adminLayout('Trainee Course Progress', 'courses', 'Detailed progress of a trainee in a course', 'Trainee Progress')
  div(class="max-w-5xl mx-auto")
    //- Back Button
    a(href="javascript:history.back()" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 mb-6 group")
      i(class="fas fa-arrow-left mr-2 transition-transform duration-200 ease-in-out group-hover:-translate-x-1")
      span(data-i18n="traineeProgress.backCourse") Back to Course

    //- Header Info
    div(class="bg-white rounded-lg shadow-lg p-6 mb-6 flex items-center space-x-4")
      img(id="trainee-avatar" class="w-20 h-20 rounded-full border-2 border-indigo-500" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face" alt="avatar")
      div
        h2(id="trainee-name" class="text-2xl font-bold text-gray-900") Loading...
        p(id="trainee-email" class="text-gray-600")

    //- Course Progress Card
    div(id="course-progress-card" class="bg-white rounded-lg shadow-lg p-8")
      h3(class="text-xl font-semibold mb-4")
        span(data-i18n="traineeProgress.courseLabel") Course:
        |  
        span(id="course-name") Loading...
      //- Summary
      div(class="grid grid-cols-3 gap-4 text-center mb-4 py-4 border-t border-b border-gray-200")
        div
          p(class="text-gray-600" data-i18n="traineeProgress.totalTasks") Total Tasks
          p(id="total-tasks" class="text-2xl font-bold text-gray-900") 0
        div
          p(class="text-gray-600" data-i18n="traineeProgress.completedTasks") Completed Tasks
          p(id="completed-tasks" class="text-2xl font-bold text-green-600") 0
        div
          p(class="text-gray-600" data-i18n="traineeProgress.progressCourse") Progress Course
          p(class="text-2xl font-bold text-indigo-600")
            span(id="course-progress-percent") 0
            span %

      //- Progress Bar
      div(class="w-full bg-gray-200 rounded-full h-4 mb-6 shadow-inner")
        div(id="course-progress-bar" class="bg-indigo-500 h-4 rounded-full transition-all duration-500 ease-out" style="width:0%")

      //- Subjects table
      div(class="overflow-x-auto rounded-lg border border-gray-200")
        table(class="min-w-full divide-y divide-gray-200")
          thead(class="bg-gray-50")
            tr
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="traineeProgress.table.subject") Subject
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="traineeProgress.table.status") Status
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="traineeProgress.table.tasks") Tasks
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="traineeProgress.table.progressTasks") Progress Tasks
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="traineeProgress.table.startedAt") Started At
              th(scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-i18n="traineeProgress.table.finishedAt") Finished At
          tbody(id="subjects-body" class="bg-white divide-y divide-gray-200")

block scripts
  script(src="/js/trainee-course-progress.js")
